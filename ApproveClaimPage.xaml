<UserControl x:Class="Contract_Monthly_Claim_System.ApproveClaimPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="850">
    <Grid Margin="20">
        
        <StackPanel>
            <TextBlock Text="Approve Claims" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <ListBox>
                
                <ListBoxItem>Claim #001 - Pending</ListBoxItem>
                <ListBoxItem>Claim #002 - Pending</ListBoxItem>
                <ListBoxItem>Claim #003 - Approved</ListBoxItem>
                
            </ListBox>
            
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Approve" Width="100" Margin="5" Background="Green" Foreground="White"/>
                <Button Content="Reject" Width="100" Margin="5" Background="Red" Foreground="White"/>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</UserControl>
