<UserControl x:Class="Contract_Monthly_Claim_System.RoleSelectionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Contract_Monthly_Claim_System"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Select Your Role" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

            <Button Content="Lecturer" Width="200" Height="50" Margin="0,10" Click="Lecturer_Click"/>
            <Button Content="Programme Coordinator" Width="200" Height="50" Margin="0,10" Click="Coordinator_Click"/>
            <Button Content="Academic Manager" Width="200" Height="50" Margin="0,10" Click="Manager_Click"/>
        </StackPanel>
    </Grid>
</UserControl>