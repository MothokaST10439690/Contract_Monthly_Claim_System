<UserControl x:Class="Contract_Monthly_Claim_System.UploadDocumentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="850">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Upload Supporting Documents" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Select File:"/>
            <Button Content="Browse..." Width="150" Margin="0,10,0,10"/>
            <Button Content="Upload" Width="150" Background="Blue" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
