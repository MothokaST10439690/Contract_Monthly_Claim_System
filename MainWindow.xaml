<Window x:Class="Contract_Monthly_Claim_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contract_Monthly_Claim_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <StackPanel>

            <!-- Navigation Panel -->
            <StackPanel Orientation="Horizontal" Background="#2C3E50" Height="50">
                <Button x:Name="btnSubmit" Content="Submit Claim" Width="120" Margin="5" Click="SubmitClaim_Click"/>
                <Button x:Name="btnApprove" Content="Approve Claim" Width="120" Margin="5" Click="ApproveClaim_Click"/>
                <Button x:Name="btnUpload" Content="Upload Documents" Width="150" Margin="5" Click="UploadDocs_Click"/>
                <Button x:Name="btnTrack" Content="Track Status" Width="120" Margin="5" Click="TrackStatus_Click"/>
            </StackPanel>

            <!-- Content Area -->
            <ContentControl x:Name="MainContent" Margin="10,10,10,10"/>
        </StackPanel>
    </Grid>
</Window>
