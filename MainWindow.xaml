<Window
    x:Class="Contract_Monthly_Claim_System.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Contract_Monthly_Claim_System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">


    <Grid>
        <StackPanel>

            <!--  Navigation Panel  -->
            <StackPanel
                Height="50"
                Background="#2C3E50"
                Orientation="Horizontal">
                <Button
                    x:Name="btnBack"
                    Width="80"
                    Margin="5"
                    Click="Back_Click"
                    Content="Back" />
                <Button
                    x:Name="btnSubmit"
                    Width="120"
                    Margin="5"
                    Click="SubmitClaim_Click"
                    Content="Submit Claim" />
                <Button
                    x:Name="btnApprove"
                    Width="120"
                    Margin="5"
                    Click="ApproveClaim_Click"
                    Content="Approve Claim" />
                <Button
                    x:Name="btnUpload"
                    Width="150"
                    Margin="5"
                    Click="UploadDocs_Click"
                    Content="Upload Documents" />
                <Button
                    x:Name="btnTrack"
                    Width="120"
                    Margin="5"
                    Click="TrackStatus_Click"
                    Content="Track Status" />
            </StackPanel>

            <!--  Content Area  -->
            <ContentControl x:Name="MainContent" Margin="10,10,10,10" />
        </StackPanel>
    </Grid>

</Window>
