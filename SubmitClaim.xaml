<UserControl x:Class="Contract_Monthly_Claim_System.SubmitClaim"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="850">
    
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Submit Claim" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Enter Hours Worked:"/>
            <TextBox Width="200" Margin="0,5,0,15"/>
            <TextBlock Text="Enter Claim Amount:"/>
            <TextBox Width="200" Margin="0,5,0,15"/>
            <Button Content="Submit Claim" Width="150" Height="40" Background="Green" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>